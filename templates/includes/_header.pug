header
  nav.navbar.navbar-expand-lg.navbar-light.bg-light
    a.navbar-brand.ml-4(href="/") 
      img.header-img(src="/img/logo.png", alt="logo")
    #navbarNav.collapse.navbar-collapse.ml-4
      ul.navbar-nav
        li.nav-item
          a.nav-link.home.active(href="/") Home
        li.nav-item
          a.nav-link(href="/forms/passport") Passport Form
        li.nav-item
          a.nav-link(href="/forms/visa") Visa Form
        li.nav-item
          a.nav-link(href="/forms/dual-citizenship") Dual Citizenship Form
        li.nav-item
          a.nav-link(href="/forms/appointment") Appointment Form
      if userId
        li.nav-item.user-profile.dropdown  
          div#dropdownMenuLink.btn.dropdown-toggle.username(role='button', data-toggle='dropdown', aria-haspopup='true', aria-expanded='false')  
            img.text-muted.avatar.mr-1(src="/img/avatar.png", alt="avatar")
            | #{email}
          .dropdown-menu(aria-labelledby='dropdownMenuLink')
            a.dropdown-item.sign-out(href="/logout") Sign out
            a.dropdown-item(href='#') Another action
            a.dropdown-item(href='#') Something else here
    button.navbar-toggler(type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation")
        span.navbar-toggler-icon