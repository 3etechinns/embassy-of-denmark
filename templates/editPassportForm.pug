                label.star *
                input.form-control.form-control-sm( type="date" name="interpretationDate" value=form.interpretationDate id="interpretationDate")
        .form-section
          p.form-section-name 
            span DECLARATION BY APPLICANT
            span.star *
          p I the undersigned, hereby apply for a Ghana Passport and declare: (choose one)
          p
            input(type="radio", name="declarationOption" value="newPassport") 
            |  That I have not previously held or applied for a passport of any description.
          p
            input(type="radio", name="declarationOption" value="attached/lost") 
            |  That the previous passport with number 
            input(type="text" name="previousPassportNumber" value=form.previousPassportNumber) 
            |   granted me is Attached/lost
          .bottom-form-group
            .form-group
              label Upload your signature
              label.star *
              .custom-file
                input#customFile.custom-file-input(type='file' name="declarationSignature" value=form.declarationSignature enctype="multipart/form-data" )
                label.custom-file-label(for='customFile') Choose file
            .form-group
                label(for="declarationDate") Date
                label.star *
                input.form-control.form-control-sm( type="date" name="declarationDate" value=form.declarationDate id="declarationDate")
        .form-section
          p.form-section-name WITNESS
          .top-form-group
            .form-group
              label(for="witnessName") Full name
              label.star *
              input.form-control.form-control-sm( type="text" placeholder="Witness name" name="witnessName" value=form.witnessName id="witnessName")
            .form-group
              label(for="witnessOccupation") Occupation
              label.star *
              input.form-control.form-control-sm( type="text" placeholder="Witness occupation" name="witnessOccupation" value=form.witnessOccupation id="witnessOccupation")
            .form-group
              label(for="witnessWorkPlaceAddress") Workplace Address
              label.star *
              input.form-control.form-control-sm( type="text" placeholder="Witness work place" name="witnessWorkPlaceAddress" value=form.witnessWorkPlaceAddress id="witnessWorkPlaceAddress")
          .bottom-form-group
            .form-group
              label(for="witnessResidentialAddress") Residential address
              label.star *
              input.form-control.form-control-sm( type="text" placeholder="Witness residential address" name="witnessResidentialAddress" value=form.witnessResidentialAddress id="witnessResidentialAddress")
            .form-group
              label(for="witnessTelephoneNumber") Telephone number
              label.star *
              input.form-control.form-control-sm( type="text" placeholder="Witness telephone number" name="witnessTelephoneNumber" value=form.witnessTelephoneNumber id="witnessTelephoneNumber")
            .form-group
              label Upload your signature
              label.star *
              .custom-file
                input#customFile.custom-file-input(type='file' accept="image/*" name="witnessSignature" value=form.witnessSignature enctype="multipart/form-data" )
                label.custom-file-label(for='customFile') Choose file
            .form-group
              label(for="witnessDate") Date
              label.star *
              input.form-control.form-control-sm( type="date" name="witnessDate" value=form.witnessDate id="witnessDate")
        .submit-button.submit-passport-form
          button.btn.btn-primary.btn-lg.custom-button(type='button', data-toggle='modal', data-target='.bd-example-modal-sm') submit
          button#continue-later.btn.btn-primary.btn-lg.custom-button(type="submit" formaction="/forms/passport?type=continue-later" formmethod="post") Save and Continue Later
  script(src="/js/countries.js")
  script.
    var countryOfBirth = document.querySelector("#countryOfBirth");
    var countryOfResidence = document.querySelector("#countryOfResidence");
    var fathersNationality = document.querySelector("#fathersNationality");
    var mothersNationality = document.querySelector("#mothersNationality");

    if (countryOfBirth) {
      countries.forEach(function(country) {
        appendOptions(countryOfBirth, country.name);
        appendOptions(countryOfResidence, country.name);
        appendOptions(mothersNationality, country.name);
        appendOptions(fathersNationality, country.name);
      });
    }

    function appendOptions(parent, value) {
      var option = document.createElement("option");
      option.innerHTML = value;
      parent.appendChild(option);
    }

