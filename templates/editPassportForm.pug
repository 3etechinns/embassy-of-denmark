extends ./layout.pug

block main
  .main-content.passport
    h5.display-5.my-4 Passport Application
    .passport-form  
      form(name="passport")
        .form-section
          .top-form-group
            .form-group
              label(for="surname") Surname
              label.star *
              input.form-control.form-control-sm(type="text" value=form.surname id="surname" placeholder="Surname" name="surname")
            .form-group
              label(for="otherNames") Other names
              input.form-control.form-control-sm(type="text" value=form.otherNames placeholder="Other names" id="otherNames" name="otherNames")
          .bottom-form-group
            .form-group
              label(for="maidenName") Maiden name(s)
              input.form-control.form-control-sm(type="text" value=form.maidenName placeholder="Maiden name(s)" id="maidenName" name="maidenName")
            .form-group#affidavit
              label(for="previousName") If name has changed by Affidavit or Gazette Publication, provide previous name
              input.form-control.form-control-sm(type="text" value=form.previousName placeholder="Previous name if changed" id="previousName" name="previousName")
        .form-section
          .top-form-group
            .form-group
              label(for="dateOfBirth") Date of birth
              label.star *
              input.form-control.form-control-sm( type="date" value=form.dateOfBirth id="dateOfBirth" name="dateOfBirth")
            .form-group
              label(for="gender" id="gender") Gender
                label.star *
              br
              .form-check.form-check-inline
                input.form-check-input.form-control-sm( type="radio" id="male" name="gender" value="male")
                label.form-check-label Male
              .form-check.form-check-inline
                input.form-check-input.form-control-sm( type="radio" id="female" name="gender" value="female")
                label.form-check-label Female
          .bottom-form-group
            .form-group
              label(for="countryOfBirth") Country of birth
                label.star *
              select.form-control.form-control-sm( type="text" value=form.countryOfBirth id="countryOfBirth" name="countryOfBirth")
                option(value="") Select one...
            .form-group
              label(for="placeOfBirth") City or town of birth
                label.star *
              input.form-control.form-control-sm( type="text" value=form.placeOfBirth placeholder="Birth city/town" id="placeOfBirth" name="placeOfBirth")
        .form-section
          .top-form-group
            .form-group
              label(for="height") Height(in meters)
                label.star *
              input.form-control.form-control-sm( type="text" value=form.height id="height" placeholder="E.g 1.7" name="height")
            .form-group
              label(for="eyeColor") Eye color
                label.star *
              select.form-control.form-control-sm( type="text" value=form.eyeColor id="eyeColor" name="eyeColor")
                option(value="") Select one...
                option(value="Black") Black
                option(value="Brown") Brown
                option(value="Blue") Blue
                option(value="Green") Green
                option(value="Grey") Grey
            .form-group
              label(for="hairColor") Hair color
              label.star *
              select.form-control.form-control-sm( id="hairColor" value=form.hairColor name="hairColor")
                option(value="") Select one...
                option(value="Black") Black
                option(value="Brown") Brown
                option(value="Blond") Blond
                option(value="Ginger") Ginger
                option(value="Grey") Grey
                option(value="Red") Red
        .form-section
          .top-form-group
            .form-group
              label(for="nationality") Nationality
              label.star *
              select#nationality.form-control.form-control-sm( name="nationality" value=form.nationality)
                option(value="") Select one
            .form-group
              label(for="profession") Profession
              label.star *
              input.form-control.form-control-sm( type="text" value=form.profession placeholder="Profession" id="profession" name="profession")
        .form-section
          .top-form-group
            .form-group
              label(for="countryOfResidence") Country of residence
              label.star *
              select.form-control.form-control-sm( name="countryOfResidence" value=form.countryOfResidence id="countryOfResidence")
                option(value="Denmark") Select one
            .form-group
              label(for="residentialAddress") Residential address
              label.star *
              input.form-control.form-control-sm( type="text" value=form.residentialAddress placeholder="Residential address" name="residentialAddress" id="residentialAddress")
            .form-group
              label(for="telephoneNumber") Telephone
              label.star *
              input.form-control.form-control-sm(type="number" value=form.telephoneNumber placeholder="Telephone" name="telephoneNumber" id="telephoneNumber")
            .form-group
              label(for="email") Email
              label.star *
              input.form-control.form-control-sm( type="email" value=form.email placeholder="Email" name="email" id="email")
        .form-section
