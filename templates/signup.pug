doctype html
html(lang='en')
  head
    title Embassy of Denmark
    meta(charset='UTF-8')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    // ===============================================================================================
    link(rel='icon', type='image/png', href='img/logo.png')
    // ===============================================================================================
    link(rel='stylesheet', type='text/css', href='vendor/bootstrap/css/bootstrap.min.css')
    // ===============================================================================================
    link(rel='stylesheet', type='text/css', href='fonts/font-awesome-4.7.0/css/font-awesome.min.css')
    // ===============================================================================================
    link(rel='stylesheet', type='text/css', href='vendor/animate/animate.css')
    // ===============================================================================================
    link(rel='stylesheet', type='text/css', href='vendor/css-hamburgers/hamburgers.min.css')
    // ===============================================================================================
    link(rel='stylesheet', type='text/css', href='vendor/select2/select2.min.css')
    // ===============================================================================================
    link(rel='stylesheet', type='text/css', href='css/util.css')
    link(rel='stylesheet', type='text/css', href='css/main.css')
    // ===============================================================================================
  body
    .limiter
      .container-login100
        .wrap-login100
          .login100-pic.js-tilt(data-tilt='')
            img(src='img/img-01.png', alt='IMG')
          form.login100-form.validate-form(method="Post" action="/create-profile")
            .text-center.p-b-30
              a.txt2(href='/')
                i.fa.fa-long-arrow-left.m-l-5(aria-hidden='true')
                | &nbsp Go Back Home
            span.login100-form-title
              | Create Account
            .wrap-input100.validate-input(data-validate='Full name is required: abcd wxyz')
              input.input100(type='text', name='fullName', placeholder='Full Name')
              span.focus-input100
              span.symbol-input100
                i.fa.fa-user(aria-hidden='true')
            .wrap-input100.validate-input(data-validate='Valid email is required: ex@abc.xyz')
              input.input100(type='text', name='email', placeholder='Email')
              span.focus-input100
              span.symbol-input100
                i.fa.fa-envelope(aria-hidden='true')
            .wrap-input100.validate-input(data-validate='Password is required')
              input.input100(type='password', name='password', placeholder='Password')
              span.focus-input100
              span.symbol-input100
                i.fa.fa-lock(aria-hidden='true')
            .wrap-input100.validate-input(data-validate='Confirm password')
              input.input100(type='password', name='confirmPassword', placeholder='Confirm Password')
              span.focus-input100
              span.symbol-input100
                i.fa.fa-lock(aria-hidden='true')
            .container-login100-form-btn
              button.login100-form-btn(type="submit")
                | Create Account
            .text-center.p-t-20
              a.txt2(href='/login')
                | Have an account? Sign In.
                i.fa.fa-long-arrow-right.m-l-5(aria-hidden='true')
    // ===============================================================================================
    script(src='vendor/jquery/jquery-3.2.1.min.js')
    // ===============================================================================================
    script(src='vendor/bootstrap/js/popper.js')
    script(src='vendor/bootstrap/js/bootstrap.min.js')
    // ===============================================================================================
    script(src='vendor/select2/select2.min.js')
    // ===============================================================================================
    script(src='vendor/tilt/tilt.jquery.min.js')
    script.
      $('.js-tilt').tilt({
      scale: 1.1
      })
    // ===============================================================================================
    script(src='js/main.js')
