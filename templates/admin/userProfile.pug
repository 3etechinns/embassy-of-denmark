  body.fixed-sn.mdb-skin
    // Main Navigation
    header
      // Navbar
      nav.navbar.navbar-expand-lg.navbar-dark.double-nav.fixed-top.scrolling-navbar
        // SideNav slide-out button
        .float-left
          a.button-collapse(href="#" data-activates="slide-out")
            i.fa.fa-bars
        // Breadcrumb
        .breadcrumb-dn.mr-auto
          p(style="font-weight: 600; font-size: 13px;") ADMIN DASHBOARD
        // Links
        ul.nav.navbar-nav.nav-flex-icons.ml-auto
          li.nav-item
            a.nav-link(href="/admin/support")
              i.fa.fa-comments-o
              span.clearfix.d-none.d-sm-inline-block Support
          li.nav-item
            a.nav-link(href="/admin/settings")
              i.fa.fa-gear
              span.clearfix.d-none.d-sm-inline-block Settings
          li.nav-item.dropdown
            a.nav-link(href="/logout")
              i.fa.fa-power-off
      // /.Navbar
      include sidebar.pug
    // Main Navigation
    .container.main-content.passport
      h5.display-5.my-4 Profile / #{user.fullName}
      .passport-form  
        form(name="userProfile")
          .form-section
            p.form-section-name Identity Information
            .row
              .col-sm-12.col-lg-5.form-group
                label.form-label(for="fullName") Full Name
                label.form-label.star *
                input.form-control.form-control-sm(type="text" value=user.fullName id="fullName" placeholder="Full Name" name="fullName")
              .col-sm-12.col-lg-5.form-group
                label.form-label(for="gender") Gender
                label.form-label.star *
                input.form-control.form-control-sm( type="text" value=user.gender placeholder="Gender" id="gender" name="gender")
            .row
              .col-sm-12.col-lg-5.form-group
                label.form-label(for="dateOfBirth") Date of Birth
                label.form-label.star *
                input.form-control.form-control-sm( type="date" value=user.dateOfBirth placeholder="Date of Birth" id="dateOfBirth" name="dateOfBirth")
              .col-sm-12.col-lg-5.form-group
                label.form-label(for="nationality") Nationality
                label.form-label.star *
                select.form-control.form-control-sm( name="nationality" id="nationality")
                  option(value="") #{user.nationality}
              .col-sm-12.col-lg-5.form-group
                label.form-label(for="idNumber") ID Number
                label.form-label.star *
                input.form-control.form-control-sm(type="text" value=user.idNumber id="idNumber" placeholder="ID Number" name="idNumber")
          .form-section
            p.form-section-name Contact Information
            .row
              .col-sm-12.col-lg-5.form-group
                label.form-label(for="email") Email
                label.form-label.star *
                input.form-control.form-control-sm( type="text" value=user.email placeholder="Email" id="email" name="email")
              .col-sm-12.col-lg-5.form-group
                label.form-label(for="telephoneNumber") Telephone Number
                label.form-label.star *
                input.form-control.form-control-sm( type="text" value=user.telephoneNumber placeholder="Telephone Number" id="telephoneNumber" name="telephoneNumber")
              .col-sm-12.col-lg-5.form-group
                label.form-label(for="residentialAddress") Residential Address
                label.form-label.star *
                input.form-control.form-control-sm( type="text" value=user.residentialAddress placeholder="Residential Address" id="residentialAddress" name="residentialAddress")
          .form-section
            p.form-section-name Verification Documents
            .row
              .col-sm-12.col-lg-5.form-group
                label.form-label(for="bankStatement") 3 months bank statement
                label.form-label.star *
                input.form-control.form-control-sm( type="text" value=user.bankStatement placeholder="3 months bank statement " id="bankStatement" name="bankStatement")
              .col-sm-12.col-lg-5.form-group
                label.form-label(for="residencePermit") Residence Permit
                label.form-label.star *
                input.form-control.form-control-sm( type="text" value=user.residencePermit placeholder="Residence Permit" id="residencePermit" name="residencePermit")
              .col-sm-12.col-lg-5.form-group
                label.form-label(for="scannedPassport") Scanned Passport
                label.form-label.star *
                input.form-control.form-control-sm( type="text" value=user.scannedPassport placeholder="Scanned Passport" id="scannedPassport" name="scannedPassport")
              .col-sm-12.col-lg-5.form-group
                label.form-label(for="verificationStatus") Verification Status
                label.form-label.star *
                input.form-control.form-control-sm( type="text" value=user.verificationStatus placeholder="Verification Status" id="verificationStatus" name="verificationStatus")
            .row.submit-button.submit-passport-form
              button.btn.btn-primary.btn-lg.custom-button(type='submit' formaction=`/admin/verify/${user._id}?verification=Not Verified` formmethod="post") Not Verified
              button.btn.btn-primary.btn-lg.custom-button(type='submit' formaction=`/admin/verify/${user._id}?verification=Under Verification` formmethod="post") Under Verification
              button#continue-later.btn.btn-primary.btn-lg.custom-button(type="submit" formaction=`/admin/verify/${user._id}?verification=Verified` formmethod="post") Verified
    // Footer
    footer.page-footer.center-on-small-only
