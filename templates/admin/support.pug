              hr(style="margin: 10px 0px;")
              li
                a.waves-effect.arrow-r(href="/admin/embassy_requests")
                  | Inter-Embassy Requests
              hr(style="margin: 10px 0px;")
              li
                a.collapsible-header.waves-effect.arrow-r
                  | Live Chat
                  i.fa.fa-angle-down.rotate-icon
                .collapsible-body
                  ul
                    li
                      a.waves-effect(href="#") FAQ
                    li
                      a.waves-effect(href="/admin/support") Write to support
                    li
                      a.waves-effect(href="#") Chat with a collegue
                    li
                      a.waves-effect(href="#") Chat with other Embassies
              hr(style="margin: 10px 0px;")
              li
                a.collapsible-header.waves-effect.arrow-r
                  | Settings
                  i.fa.fa-angle-down.rotate-icon
                .collapsible-body
                  ul
                    li
                      a.waves-effect(href="#") Access Rights
                    li
                      a.waves-effect(href="#") User log
                    li
                      a.waves-effect(href="#") Currency
                    li
                      a.waves-effect(href="#") Bank/Card details
                    li
                      a.waves-effect(href="#") Embassy Profile
                    li
                      a.waves-effect(href="#") Staff
          // /. Side navigation links
        // Mask
        .sidenav-bg.mask-strong
      // /. Sidebar navigation
    // Main Navigation
    // Main layout
    main(style="margin: 0%;")
      .container.row(style="margin: 0px;")
        .col-md-12
          section
            h6(style="font-weight:600;") WRITE TO SUPPORT
          hr
          section.section
            p.section-description
              | Do you have any questions? Please do not hesitate to contact us directly. Our team will come back to
              | you within matter of hours to help you.
            if message
              .alert.alert-success.text-center.alert-dismissible(role="alert" data-dismiss="alert") 
                a(href="#" class="close" data-dismiss="alert" aria-label="close") &times;
                | #{message}
            .row
              // Grid column
              .col-md-12
                form#contact-form(name="contact-form" action="/admin/support" method="POST")
                  // Grid row
                  .row
                    // Grid column
                    .col-md-6
                      .md-form
                        input#name.form-control(type="text" name="name")
                        label(for="name") Embassy name
                    // Grid column
                    // Grid column
                    .col-md-6
                      .md-form
                        input#email.form-control(type="text" name="email")
                        label(for="email") Embassy email
                    // Grid column
                  // Grid row
                  // Grid row
                  .row
                    .col-md-12
                      .md-form
                        input#subject.form-control(type="text" name="subject")
                        label(for="subject") Subject
                  // Grid row
                  // Grid row
                  .row
                    // Grid column
                    .col-md-12
                      .md-form
                        textarea#message.form-control.md-textarea(type="text" name="message" rows="2")
                        label(for="message") Your message
                  // Grid row
                .center-on-small-only
                  a.btn.btn-primary(onclick="document.getElementById('contact-form').submit();") Send
                .status
              // Grid column
          // Section: Contact v.2
    // Main layout
    // Footer
    footer.page-footer.center-on-small-only
      .flex-center.mb-3.mt-2
        a.px-3(href="")
