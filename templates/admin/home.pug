  body.fixed-sn.mdb-skin
    // Main Navigation
    header
      // Navbar
      nav.navbar.navbar-expand-lg.navbar-dark.double-nav.fixed-top.scrolling-navbar
        // SideNav slide-out button
        .float-left
          a.button-collapse(href="#" data-activates="slide-out")
            i.fa.fa-bars
        // Breadcrumb
        .breadcrumb-dn.mr-auto
          p(style="font-weight: 600; font-size: 13px;") ADMIN DASHBOARD
        // Links
        ul.nav.navbar-nav.nav-flex-icons.ml-auto
          li.nav-item
            a.nav-link(href="/admin/support")
              i.fa.fa-comments-o
              span.clearfix.d-none.d-sm-inline-block support
          li.nav-item
            a.nav-link(href="/admin/settings")
              i.fa.fa-gear
              span.clearfix.d-none.d-sm-inline-block Settings
          li.nav-item.dropdown
            a.nav-link(href="/logout")
              i.fa.fa-power-off
      // /.Navbar
      // Sidebar navigation
      #slide-out.side-nav.fixed(style="background: url(/img/logo.png) no-repeat;\
      background-position: center center;\
      background-size: cover;\
      background-attachment: fixed;\
      background-color: black;")
        ul.custom-scrollbar.list-unstyled
          // Logo
          li.logo-sn.waves-effect
            .text-center
              a.pl-0(href="#")
                img(src="/img/logo.png")
          // /. Logo
          // Search Form
          li
            form.search-form(role="search")
              .form-group.waves-light
                input.form-control(type="text" placeholder="Search")
          // /.Search Form
          // Side navigation links
          li
            ul.collapsible.collapsible-accordion
              li
                a.waves-effect.arrow-r(href="/admin")
                  | Dashboard
              hr(style="margin: 10px 0px;")
              li
                a.collapsible-header.waves-effect.arrow-r
                  | Transaction Pipeline
                  i.fa.fa-angle-down.rotate-icon
                .collapsible-body
                  ul
                    li
                      a.waves-effect(href="/admin/transaction") All
                    li
                      a.waves-effect(href="/admin/transaction") New Requests
                    li
                      a.waves-effect(href="/admin/transaction") Under Processing
                    li
                      a.waves-effect(href="/admin/transaction") Completed Requests
                    li
                      a.waves-effect(href="/admin/transaction") Dispatched Requests
              hr(style="margin: 10px 0px;")
              li
                a.waves-effect.arrow-r(href="/admin/user_search")
                  | User Search & Reporting
              hr(style="margin: 10px 0px;")
              li
                a.waves-effect.arrow-r(href="/admin/embassy_requests")
                  | Inter-Embassy Requests
              hr(style="margin: 10px 0px;")
              li
                a.collapsible-header.waves-effect.arrow-r
                  | Live Chat
                  i.fa.fa-angle-down.rotate-icon
                .collapsible-body
                  ul
                    li
                      a.waves-effect(href="#") FAQ
                    li
                      a.waves-effect(href="support.html") Write to support
                    li
                      a.waves-effect(href="#") Chat with a colleague
                    li
                      a.waves-effect(href="#") Chat with other Embassies
              hr(style="margin: 10px 0px;")
              li
                a.collapsible-header.waves-effect.arrow-r
                  | Settings
                  i.fa.fa-angle-down.rotate-icon
                .collapsible-body
                  ul
                    li
                      a.waves-effect(href="#") Access Rights
                    li
                      a.waves-effect(href="#") User log
                    li
                      a.waves-effect(href="#") Currency
                    li
                      a.waves-effect(href="#") Bank/Card details
                    li
                      a.waves-effect(href="#") Embassy Profile
                    li
                      a.waves-effect(href="#") Staff
          // /. Side navigation links
        // Mask
        .sidenav-bg.mask-strong
      // /. Sidebar navigation
    // Main Navigation
    // Main layout
    main(style="margin: 0%;")
      .container-fluid.row(style="margin: 0px;")
        .col-md-9
          section
            h6(style="font-weight:600;") TRANSACTION SUMMARY:
            .row.mt-2.mb-2
              .col-md-3
                h6 New Requests
                h1 #{newRequestsCount}
              .col-md-3
                h6 Under Processing
                h1 #{underProcessingRequestsCount}
              .col-md-3
                h6 Completed Requests
                h1 #{completedRequestsCount}
              .col-md-3
                h6 Dispatched Requests
                h1 #{dispatchedRequestsCount}
          hr
          // Section: Modals
          section
            // Modal: modalConfirmDelete
            #modalConfirmDelete.modal.fade(tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true")
              .modal-dialog.modal-sm.modal-notify.modal-danger(role="document")
                // Content
                .modal-content.text-center
                  // Header
                  .modal-header.d-flex.justify-content-center
                    p.heading Are you sure?
                  // Body
                  .modal-body
                    p You can't Undo once this item is deleted
                  // Footer
                  .modal-footer.flex-center
                    a.btn.btn-outline-secondary-modal(style="color: black !important;") Yes
                    a.btn.btn-primary-modal.waves-effect(type="button" data-dismiss="modal" style="color: black !important;") No
                // /.Content
            // Modal: modalConfirmDelete
          // Section: Modals
          // Section: Main panel
          section.card.card-cascade.narrower.mb-2
            // Grid row
            .row
              // Grid column
              .col-md-5
                // Panel Header
                .view.py-3.px-3(style="background: DodgerBlue; color: white;")
                  h6.mb-0
                    strong Revenue
                // /Panel Header
                // Panel content
                .card-body
                  // Grid row
                  .row
                    // Grid column
                    .col-md-6.mb-4
                      // Date select
                      p.lead(style="font-size: 15px; font-weight: 600;")
                        | DATE RANGE
                      .custom-select
                        select
                          option(value="" disabled="" selected="") time period
                          option(value="1") Today
                          option(value="2") Yesterday
                          option(value="3") Last 7 days
                          option(value="3") Last 30 days
                          option(value="3") Last week
                          option(value="3") Last month
                      // Date pickers
                      p.lead.my-4.mt-3(style="font-size: 15px; font-weight: 600;")
                        | CUSTOM DATE
                      .md-form
                        input#from.form-control.datepicker(placeholder="Selected date" type="text")
                        label(for="date-picker-example") From
                      .md-form
                        input#to.form-control.datepicker(placeholder="Selected date" type="text")
                        label(for="date-picker-example") To
                    // Grid column
                    // Grid column
                    .col-md-6.mb-4.text-center
                      // Summary
                      p
                        | Total revenue:
                        strong 2000GHC
                        button.btn.btn-sm.btn-info.p-2(style="background-color: grey;" data-toggle="tooltip" data-placement="top" title="Total revenue in the given period")
                          i.fa.fa-question
                      p
                        | Average revenue:
                        strong 100GHC
                        button.btn.btn-sm.btn-info.p-2(style="background-color: grey;" data-toggle="tooltip" data-placement="top" title="Average daily revenue in the given period")
                          i.fa.fa-question
                      // Change chart
                      span#chart-revenue.min-chart.my-4(data-percent="76")
                        span.percent
                      h5
                        span.badge.green.p-2
                          | % Change
                          i.fa.fa-arrow-circle-up.ml-1
                        button.btn.btn-sm.btn-info.p-2(style="background-color: grey;" data-toggle="tooltip" data-placement="top" title="Percentage change compared to the same period in the past")
                          i.fa.fa-question
                    // Grid column
                  // Grid row
                // Panel content
              // Grid column
              // Grid column
              .col-md-7
                // Panel Header
                .view.py-1.px-1.gradient-card-header.mb-4(style="background-color: dodgerblue;")
                  canvas#lineChart
                // /Card image
              // Grid column
            // Grid row
          // Section: Main panel
          // Section: Table
          section
            // Card
            .card.card-cascade.narrower(style="width: 100%;")
              // Card header
              .view.py-3.gradient-card-header.blue.mx-4.d-flex.justify-content-between.align-items-center
                a.white-text.mx-3(href="") Forms
                div
                  button.btn.btn-outline-white.btn-rounded.btn-sm.px-2(type="button" data-toggle="tooltip" data-placement="bottom" title="info")
                    i.fa.fa-info-circle.mt-0
              // /Card header
              // Card content
              .card-body
                .row
                  .col-md-6.my-2
                    .custom-select(style="width: 50%;")
                      select
                        option(value="" disabled="" selected="") show all
                        option(value="0") show all
                        option(value="1") Processed
                        option(value="2") Pending
                        option(value="3") Last 7 days
                  .col-md-6.my-2
                    form.form-inline
                      input.form-control.my-0.py-0(type="text" placeholder="Search" style="max-width: 150px;")
                      button.btn.btn-sm.btn-info.ml-2.px-2
                        i.fa.fa-search
                .table-responsive
                  table.table
                    thead
                      tr
                        th
                          input#checkbox(type="checkbox")
                          label.label-table(for="checkbox")
                        th.th-lg Form Type
                        th.th-lg Applicant
                        th.th-lg Date Applied
                        th.th-lg Status
                        th.th-lg 
                    tbody
                    for formRecord in formRecords
                      tr
                        th(scope="row")
                          input#checkbox1(type="checkbox")
                          label.label-table(for="checkbox1")
                        td #{formRecord.formType}
                        td #{formRecord._owner.email}
                        td #{formRecord.createdAt}
                        td #{formRecord.status}
                        td.actions-button
                          a(href=`/admin/view/${formRecord.formId}?type=${formRecord.formType}` title="View Form")
                            img.icon(src="/img/eye.svg")
                  if !formRecords.length
                    .alert.alert-danger.text-center(role="alert") No Form records yet in our Database
                hr.my-0
                // Bottom Table UI
                div
                  // Name
                  .row
                    .col-md-4.custom-select.my-4.mx-3(style="width: 100%;")
                      select.my-4
                        option(value="0" disabled="") Rows number
                        option(value="1" selected="") 10 rows
                        option(value="2") 25 rows
                        option(value="3") 50 rows
                        option(value="4") 100 rows
                        option(value="4") all
                    .col-md-5
                      // Pagination
                      nav.my-4
                        ul.pagination.pagination-circle.pg-blue.mb-0
                          // First
                          li.page-item.disabled
                            a.page-link First
                          // Arrow left
                          li.page-item.disabled
                            a.page-link(aria-label="Previous")
                              span(aria-hidden="true") «
                              span.sr-only Previous
                          // Numbers
                          li.page-item.active
                            a.page-link 1
                          li.page-item
                            a.page-link 2
                          li.page-item
                            a.page-link 3
                          // Arrow right
                          li.page-item
                            a.page-link(aria-label="Next")
                              span(aria-hidden="true") »
                              span.sr-only Next
                          // First
                          li.page-item
                            a.page-link Last
                      // /Pagination
                // Bottom Table UI
              // /.Card content
            // /.Card
          // Section: Table
        //- .col-md-3
        //-   .sticky
        //-     .list-group
        //-       a.list-group-item.active.waves-effect(href="#")
        //-         | User Search and Reporting
        //-       a.list-group-item.list-group-item-action.waves-effect(href="#") data
      #stopper.pb-2
    // Main layout
    // Footer
    footer.page-footer.center-on-small-only
      .flex-center.mb-3.mt-2
        a.px-3(href="")
          i.fa.fa-facebook
        a.px-3(href="")
          i.fa.fa-instagram
        a.px-3(href="")
          i.fa.fa-google
        a.px-3(href="")
          i.fa.fa-twitter
        a.px-3(href="")
          i.fa.fa-linkedin
      // Copyright
      .footer-copyright
        .container-fluid
          | © 2018 Copyright:
          a(href="/admin")  Embassy Of Denmark 
      // /.Copyright
    // /.Footer
    // SCRIPTS
    // JQuery
    script(type="text/javascript" src="/js/jquery-3.3.1.min.js")
    // Bootstrap tooltips
    script(type="text/javascript" src="/js/popper.min.js")
    // Bootstrap core JavaScript
    script(type="text/javascript" src="/js/bootstrap.min.js")
    // MDB core JavaScript
    script(type="text/javascript" src="/js/mdb.min.js")
    script(type="text/javascript" src="/js/compiled.min.js")
    script(type="text/javascript" src="/js/custom.js")
    // Initializations
    script.
      // SideNav Initialization
      $(".button-collapse").sideNav();
      // Material Select Initialization
      $(document).ready(function () {
      $('.mdb-select').material_select();
      });
      // Data Picker Initialization
      $('.datepicker').pickadate();
      // Tooltip Initialization
      $(function () {
      $('[data-toggle="tooltip"]').tooltip()
      })
    // Charts
    script.
      // Minimalist chart
      $(function () {
      $('.min-chart#chart-revenue').easyPieChart({
      barColor: "#4caf50",
      onStep: function (from, to, percent) {
      $(this.el).find('.percent').text(Math.round(percent));
      }
      });
      });
      // Main chart
      var ctxL = document.getElementById("lineChart").getContext('2d');
      var myLineChart = new Chart(ctxL, {
      type: 'line',
      data: {
      labels: ["January", "February", "March", "April", "May", "June", "July"],
      datasets: [{
      label: "Revenue Graph",
      fillColor: "#fff",
      backgroundColor: 'rgba(255, 255, 255, .3)',
      borderColor: 'rgba(255, 99, 132)',
      data: [0, 10, 5, 2, 20, 30, 45],
      }]
      },
      options: {
      legend: {
      labels: {
      fontColor: "#fff",
      }
      },
      scales: {
      xAxes: [{
      gridLines: {
      display: true,
      color: "rgba(255,255,255,.25)"
      },
      ticks: {
      fontColor: "#fff",
      },
      }],
      yAxes: [{
      display: true,
      gridLines: {
      display: true,
      color: "rgba(255,255,255,.25)"
      },
      ticks: {
      fontColor: "#fff",
      },
      }],
      }
      }
      });
    // Alerts
    script.
      $(function () {
      $('#folder-1').click(function () {
      toastr.error("Folder 1 has been clicked!", "Folder 1", {
      "positionClass": "toast-top-right",
      });
      });
      $('#folder-2').click(function () {
      // make it not dissappear
      toastr.info("Folder 2 has been clicked!", "Folder 2", );
      });
      $('#folder-3').click(function () {
      // make it not dissappear
      toastr.info("Folder 3 has been clicked!", "Folder 3", );
      });
      });
    // sticky
    script(type="text/javascript").
      $(function () {
      $(".sticky").sticky({
      topSpacing: 90
      , zIndex: 2
      , stopper: "#stopper"
      });
      });
